<odoo>
  <record id="view_startup_task_tree" model="ir.ui.view">
    <field name="name">startup.task.tree</field>
    <field name="model">startup.task</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="project_id"/>
        <field name="assigned_to"/>
        <field name="stage"/>
        <field name="progress"/>
      </tree>
    </field>
  </record>

  <record id="view_startup_task_form" model="ir.ui.view">
    <field name="name">startup.task.form</field>
    <field name="model">startup.task</field>
    <field name="arch" type="xml">
      <form string="Task">
        <sheet>
          <group>
            <field name="name"/>
            <field name="project_id"/>
            <field name="assigned_to"/>
            <field name="planned_hours"/>
            <field name="spent_hours"/>
            <field name="stage"/>
            <field name="progress" readonly="1"/>
            <field name="note"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <menuitem id="menu_startup_tasks" name="Tasks" parent="menu_startup_root"/>
  <act_window id="action_startup_tasks" name="Tasks" res_model="startup.task" view_mode="tree,form"/>
</odoo>