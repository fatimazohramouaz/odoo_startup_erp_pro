<odoo>
  <record id="view_startup_project_tree" model="ir.ui.view">
    <field name="name">startup.project.tree</field>
    <field name="model">startup.project</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="customer_id"/>
        <field name="manager_id"/>
        <field name="state"/>
        <field name="budget"/>
      </tree>
    </field>
  </record>

  <record id="view_startup_project_form" model="ir.ui.view">
    <field name="name">startup.project.form</field>
    <field name="model">startup.project</field>
    <field name="arch" type="xml">
      <form string="Project">
        <sheet>
          <group>
            <field name="name"/>
            <field name="customer_id"/>
            <field name="manager_id"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="budget"/>
            <field name="sale_order_id"/>
            <field name="state"/>
          </group>
          <notebook>
            <page string="Tasks">
              <field name="task_ids">
                <tree>
                  <field name="name"/>
                  <field name="assigned_to"/>
                  <field name="stage"/>
                </tree>
              </field>
            </page>
            <page string="Invoices">
              <field name="invoice_count" readonly="1"/>
            </page>
          </notebook>
        </sheet>
        <footer>
          <button string="Start" type="object" name="action_start" class="oe_highlight"/>
          <button string="Done" type="object" name="action_done"/>
        </footer>
      </form>
    </field>
  </record>

  <menuitem id="menu_startup_project" name="Projects" parent="menu_startup_root"/>
  <act_window id="action_startup_projects" name="Projects" res_model="startup.project" view_mode="tree,form"/>
</odoo>